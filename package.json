{
  "name": "fiap-tech-challenge",
  "version": "1.0.0",
  "description": "Order control system to ensure that the snack bar can serve customers efficiently, similar to the totems currently present in large fast-food franchises",
  "main": "src/bootstrap/server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "start:dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/bootstrap/server.ts",
    "start": "node -r ./tsconfig.paths.js dist/src/bootstrap/server.js",
    "prisma:generate-migrations": "npx prisma migrate dev",
    "prisma:apply-migrations": "npx prisma migrate deploy",
    "prisma:generate-erd": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "format:code": "prettier --write && npx prisma format",
    "lint": "npx eslint . --fix",
    "lint:check": "npx eslint .",
    "lint:staged": "lint-staged",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "test": "jest --passWithNoTests --silent --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:watch": "jest --watch",
    "test:omit-stack": "jest --passWithNoTests --silent --noStackTrace",
    "test:staged": "npm test --findRelatedTests",
    "test:ci": "npm test --coverage",
    "test:cache": "jest --clearCache"
  },
  "keywords": [],
  "author": "Jhony Walker (https://github.com/jhonywalkeer)",
  "contributors": [
    {
      "name": "Jhony Walker",
      "url": "https://github.com/jhonywalkeer"
    }
  ],
  "license": " Apache-2.0 license",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^29.5.12",
    "@types/lint-staged": "^13.3.0",
    "@types/node": "^20.12.12",
    "@types/nodemon": "^1.19.6",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "prisma": "^5.14.0",
    "prisma-erd-generator": "^1.11.2",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "mercadopago": "^2.0.11",
    "module-alias": "^2.2.3",
    "pg": "^8.12.0",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.0"
  },
  "prisma": {
    "schema": "src/infrastructure/persistence/database/schema.prisma"
  }
}
